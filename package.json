{
  "name": "pinetto",
  "version": "0.0.2",
  "description": "Opinionated logging library focusing on simplicity, inspectability and customization. Supports child loggers.",
  "main": "./dist/cjs/index.js",
  "exports": {
    "import": "./dist/es/index.js",
    "require": "./dist/cjs/index.js"
  },
  "type": "commonjs",
  "scripts": {
    "build:es": "tsc -p tsconfig.es.json && echo '{\"type\": \"module\"}' > dist/es/package.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "npm run build:es && npm run build:cjs",
    "test": "exit 0"
  },
  "author": "Jacopo Scazzosi <jacopo@scazzosi.com>",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^4.7.4"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "engines": {
    "node": ">= 16"
  },
  "keywords": [
    "logging",
    "logger",
    "log",
    "inspect",
    "simple",
    "pino",
    "pinetto",
    "child",
    "console"
  ]
}
